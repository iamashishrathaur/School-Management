<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".StudentTimetable">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/Apvar"
        app:elevation="10dp"
        android:background="#F2472C"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <androidx.appcompat.widget.Toolbar
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/timetable_back_pressed"
                android:background="@drawable/back_effect"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="start"
                android:fontFamily="@font/adamina"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/adamina"
                android:text="Timetable"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18dp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <include layout="@layout/first_year_time_table"
        android:layout_below="@+id/Apvar"
        android:id="@+id/first_year_time_table"
        android:visibility="invisible"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    <include layout="@layout/second_year_timetable"
        android:layout_below="@+id/Apvar"
        android:id="@+id/second_year_timetable"
        android:visibility="invisible"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    <include layout="@layout/third_year_timetable"
        android:layout_below="@+id/Apvar"
        android:id="@+id/third_year_timetable"
        android:visibility="invisible"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
</RelativeLayout>