<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0"
    >
       <com.google.android.material.appbar.AppBarLayout
           app:elevation="10dp"
           android:background="#F2472C"
           android:layout_width="match_parent"
           android:layout_height="50dp">
              <androidx.appcompat.widget.Toolbar
                  android:elevation="10dp"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                     <ImageView
                         android:background="@drawable/back_effect"
                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:layout_gravity="start"
                         android:fontFamily="@font/adamina"
                         android:src="@drawable/ic_baseline_arrow_back_ios_24"
                         android:textColor="#ffffff"
                         android:textStyle="bold"
                         android:textSize="18dp"/>
                     <TextView
                         android:id="@+id/year_name"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:fontFamily="@font/adamina"
                         android:text="First Year Subject"
                         android:textAlignment="center"
                         android:textColor="#ffffff"
                         android:textStyle="bold"
                         android:textSize="18dp"/>
              </androidx.appcompat.widget.Toolbar>
       </com.google.android.material.appbar.AppBarLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
              <include layout="@layout/first_year_subject"
                  android:layout_height="match_parent"
                  android:layout_width="match_parent"
                 />
              <include layout="@layout/second_year_subject"
                  android:layout_height="match_parent"
                  android:layout_width="match_parent"
                 />
              <include
                  layout="@layout/third_year_subject"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  />
       </RelativeLayout>
</LinearLayout>