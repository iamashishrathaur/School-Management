<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddAboutSchool">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/Apvar"
        app:elevation="10dp"
        android:background="#F2472C"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.google.android.material.navigation.NavigationView
            android:background="#F2472C"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/add_about_school_back_pressed"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/adamina"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="School Details"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:ignore="VisualLintOverlap" />
        </com.google.android.material.navigation.NavigationView>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/about_school_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="100dp" >
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:scaleType="fitXY"
                        app:riv_corner_radius="100dp"
                        android:id="@+id/about_school_logo_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="15dp"
                    app:cardElevation="5dp"
                    android:elevation="10dp"
                    android:layout_toEndOf="@id/about_school_logo"
                    android:layout_marginStart="-30dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/camera"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/about_school_logo"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#404F6D"
                    android:textSize="11sp"
                    android:text="(Add School Logo)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/user_ragistation_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/costom_edit_text"
                    app:boxBackgroundMode="none"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/about_school"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/costom_edit_text"
                        android:inputType="text"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        tools:ignore="SpeakableTextPresentCheck,VisualLintTextFieldSize" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:layout_marginStart="20dp"
                    android:text="About School*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="DisableBaselineAlignment">

            <RelativeLayout
                android:background="@drawable/date_time_effect"
                android:id="@+id/open_time"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_height="70dp">
         <TextView
             android:textColor="@color/black"
             android:layout_marginStart="30dp"
             android:layout_marginBottom="10dp"
             android:layout_alignParentBottom="true"

             android:id="@+id/open_time_text"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:layout_marginStart="20dp"
                    android:text="Open Time*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
                <RelativeLayout
                    android:background="@drawable/date_time_effect"
                    android:id="@+id/close_time"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:layout_width="0dp"
                    android:layout_height="70dp">
                    <TextView
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"
                        android:id="@+id/close_time_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="13sp"
                        android:layout_marginStart="20dp"
                        android:text="Close Time*"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_marginVertical="10dp"
                android:layout_marginStart="15sp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#404F6D"
                android:text="Contract Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout

                android:layout_marginHorizontal="10dp"
                android:background="@drawable/user_ragistation_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/costom_edit_text"
                    app:boxBackgroundMode="none"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/contract_details_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/costom_edit_text"
                        android:inputType="text"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,VisualLintTextFieldSize" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:layout_marginStart="20dp"
                    android:text="Name*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/user_ragistation_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/costom_edit_text"
                    app:boxBackgroundMode="none"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/contract_details_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/costom_edit_text"
                        android:inputType="text"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        tools:ignore="SpeakableTextPresentCheck,VisualLintTextFieldSize" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:layout_marginStart="20dp"
                    android:text="Mobile No*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/user_ragistation_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/costom_edit_text"
                    app:boxBackgroundMode="none"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/contract_details_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/costom_edit_text"
                        android:inputType="text"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        tools:ignore="SpeakableTextPresentCheck,VisualLintTextFieldSize" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:layout_marginStart="20dp"
                    android:text="Email*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:layout_marginVertical="10dp"
                android:layout_marginStart="15sp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#404F6D"
                android:text="Second Contract Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout

                android:layout_marginHorizontal="10dp"
                android:background="@drawable/user_ragistation_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/costom_edit_text"
                    app:boxBackgroundMode="none"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/second_contract_details_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/costom_edit_text"
                        android:inputType="text"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        tools:ignore="SpeakableTextPresentCheck,VisualLintTextFieldSize" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:layout_marginStart="20dp"
                    android:text="Name*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/user_ragistation_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/costom_edit_text"
                    app:boxBackgroundMode="none"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/second_contract_details_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/costom_edit_text"
                        android:inputType="text"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        tools:ignore="SpeakableTextPresentCheck,VisualLintTextFieldSize" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:layout_marginStart="20dp"
                    android:text="Mobile No*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/user_ragistation_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/costom_edit_text"
                    app:boxBackgroundMode="none"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/second_contract_details_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/costom_edit_text"
                        android:inputType="text"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        tools:ignore="SpeakableTextPresentCheck,VisualLintTextFieldSize" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:layout_marginStart="20dp"
                    android:text="Email*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:layout_marginBottom="20dp"
                android:id="@+id/submit_about_school"
                android:elevation="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Submit"
                android:background="@drawable/login_button"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>