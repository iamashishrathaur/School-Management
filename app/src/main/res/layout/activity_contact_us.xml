<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactUs">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/Apvar"
        app:elevation="10dp"
        android:background="#F2472C"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.google.android.material.navigation.NavigationView
            android:background="#F2472C"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/contract_back_pressed"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/adamina"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Support"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </com.google.android.material.navigation.NavigationView>
    </com.google.android.material.appbar.AppBarLayout>

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
<TextView
    android:id="@+id/a"
    android:textColor="#373D7A"
    android:textStyle="bold"
    android:textSize="22sp"
    android:textAlignment="center"
    android:text="We are happy to help you!"
    android:layout_marginTop="80dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/b"
        app:cardElevation="5dp"
        android:layout_marginTop="100dp"
        android:layout_below="@id/a"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"
                android:textAlignment="center"
                android:text="Team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#2C2C2C"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="My School"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="9sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="**********"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:textColor="#F2472C"
                android:textAlignment="center"
                android:text="ashishrathaur3523@gmail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="50dp"
        android:layout_below="@id/a"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="100dp"
        app:cardElevation="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/support"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="Made with â™¥ in India"
        android:layout_marginTop="20dp"
        android:layout_below="@id/b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
</LinearLayout>
