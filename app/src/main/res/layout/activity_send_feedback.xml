<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SendFeedback">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/Apvar"
        app:elevation="10dp"
        android:background="#F2472C"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.google.android.material.navigation.NavigationView
            android:background="#F2472C"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/feedback_back_pressed"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/adamina"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    tools:ignore="ContentDescription,RtlSymmetry" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Feedback"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </com.google.android.material.navigation.NavigationView>
    </com.google.android.material.appbar.AppBarLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/a"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:textColor="#373D7A"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please give your valuable feedback"/>
    <LinearLayout
        android:id="@+id/b"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_below="@id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView
                android:layout_marginHorizontal="10dp"
                android:id="@+id/love_click"
                android:background="@drawable/love"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <ImageView
                android:layout_marginHorizontal="10dp"
                android:id="@+id/happy_click"
                android:background="@drawable/happy"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <ImageView
                android:layout_marginHorizontal="10dp"
                android:id="@+id/not_sure_click"
                android:background="@drawable/sure"
                android:layout_width="50dp"
                android:layout_height="50dp"/>


            <ImageView
                android:layout_marginHorizontal="10dp"
                android:id="@+id/sad_click"
                android:background="@drawable/sad"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout

        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginHorizontal="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
           android:textAlignment="center"
             android:text="Love"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Happy"
            android:layout_marginHorizontal="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Not Sure"
            android:layout_marginHorizontal="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Sad"
            android:layout_marginHorizontal="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="30dp"
        android:layout_above="@id/send_feedback"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/user_ragistation_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="2dp"
            android:background="@drawable/costom_edit_text"
            app:boxBackgroundMode="none"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/costom_edit_text"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLines="100"
                android:minLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/b8b8b8"
                android:textSize="17dp"
                tools:ignore="SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:text="Send feedback*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/send_feedback"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:elevation="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Submit"
        android:background="@drawable/login_button"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</RelativeLayout>
</LinearLayout>