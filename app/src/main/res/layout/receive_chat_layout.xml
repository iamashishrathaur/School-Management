<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_text_layout"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/send_chat_text_layout"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/receive_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:id="@+id/send_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:textColor="#000000"
            android:textSize="16.5sp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
    <TextView
        android:layout_below="@id/send_chat_text_layout"
        android:layout_marginStart="10dp"
        android:id="@+id/send_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textColor="#8C8C8C"
        android:textSize="13sp"/>
</RelativeLayout>