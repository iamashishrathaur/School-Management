<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:gravity="bottom"
android:background="#F2472C"
android:paddingBottom="10dp"
android:layout_height="150dp">

<TextView
    android:layout_marginTop="1dp"
    android:id="@+id/_teacher_profession"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="20dp"
    android:fontFamily="@font/alegreya_sc"
    android:textColor="@color/white"
    android:textSize="12sp"
    tools:ignore="RelativeOverlap" />
<RelativeLayout
    android:id="@+id/rl"
    android:layout_marginBottom="20dp"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardElevation="5dp"
        android:id="@+id/about_school_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="100dp" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:scaleType="fitXY"
                app:riv_corner_radius="100dp"
                android:id="@+id/teacher_image_click"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/teacher_image_progress"
                android:max="100"
                android:progress="0"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="#F2472C"
                android:layout_centerInParent="true"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        app:cardElevation="8dp"
        android:layout_toEndOf="@id/about_school_logo"
        android:layout_marginStart="-25dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:cardCornerRadius="30dp">
        <ImageView
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
<LinearLayout
    android:layout_marginTop="-20dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/rl"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
        android:id="@+id/_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/asul"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/_teacher_email"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:fontFamily="@font/asul"/>
</LinearLayout>
</RelativeLayout>