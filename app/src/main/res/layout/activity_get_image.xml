<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBE8E8"
    tools:context=".GetImage">
<ImageView
    android:id="@+id/get_gallery_image"
    android:layout_marginVertical="30dp"
    android:layout_marginHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_height="250dp"/>
    <ProgressBar
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="60dp"
        android:id="@+id/progressbar_upload_image"
        android:layout_height="60dp"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="#F2472C"

        />
    <TextView
        android:visibility="gone"
        android:id="@+id/progressbar_upload_text"
        android:layout_centerInParent="true"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/get_gallery_image"
         android:id="@+id/get_image_post"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Submit"
        android:background="@drawable/login_button"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
</RelativeLayout>