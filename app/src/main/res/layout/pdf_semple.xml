<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/home_work_cardView"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:layout_height="90dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="5dp">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/a"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/homework_image_background"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pdf" />
        </LinearLayout>
        <ImageView
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_width="15sp"
            android:layout_height="15sp"/>
        <TextView
            android:layout_marginEnd="40dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/a"
            android:id="@+id/recycle_pdf_name"
            android:layout_marginTop="25dp"
            android:text="Subject"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/a"
            android:orientation="horizontal"
            android:layout_below="@id/recycle_pdf_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/recycle_pdf_date"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heading"
                android:textColor="#8C8C8C"/>
            <TextView
                android:layout_marginStart="5dp"
                android:id="@+id/recycle_pdf_time"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heading"
                android:textColor="#8C8C8C"/>
        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>