<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE8E0"
    tools:context=".Chat">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/Apvar"
        app:elevation="10dp"
        android:background="#F2472C"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:background="#F2472C"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/chat_show_back_pressed"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/adamina"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    tools:ignore="ContentDescription,RtlSymmetry" />
            </RelativeLayout>
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="100dp"
                android:id="@+id/chat_user_image_show"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/chat_show_back_pressed"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/chat_user"/>
            <RelativeLayout
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/chat_user_image_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/chat_user_name_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/chat_user_name_show"
                    android:id="@+id/chat_user_status_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="13sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/chat"
        android:layout_below="@id/Apvar"
       />
<RelativeLayout
    android:id="@+id/chat"
    android:layout_marginBottom="5dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/chat_edit_text"
        android:textCursorDrawable="@drawable/chat_cursor"
        android:layout_marginEnd="10dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/chat_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_edittext_back"
        android:maxLength="10000"
        android:maxLines="5"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:textColor="@color/black"
        tools:ignore="LabelFor,SpeakableTextPresentCheck"
        android:importantForAutofill="no"
        android:inputType="textCapSentences|textAutoComplete|textAutoCorrect|textEnableTextConversionSuggestions"/>
    <ImageView
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:padding="15sp"
        android:src="@drawable/send_message"
        android:background="@drawable/send_button"
        android:layout_alignParentEnd="true"
        android:id="@+id/chat_send_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="@string/app_name" />
</RelativeLayout>
</RelativeLayout>