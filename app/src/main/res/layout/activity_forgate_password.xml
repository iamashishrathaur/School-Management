<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ForgatePassword"
    android:orientation="vertical">
  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/Apvar"
      app:elevation="10dp"
      android:background="#F2472C"
      android:layout_width="match_parent"
      android:layout_height="50dp">
    <com.google.android.material.navigation.NavigationView
        android:background="#F2472C"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <RelativeLayout
          android:id="@+id/forgote_password_back_pressed"
          android:layout_width="60dp"
          android:layout_height="match_parent">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:fontFamily="@font/adamina"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18dp"/>
      </RelativeLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:fontFamily="@font/adamina"
          android:text="Forgote Password"
          android:textAlignment="center"
          android:textColor="#ffffff"
          android:textStyle="bold"
          android:textSize="18sp"/>
    </com.google.android.material.navigation.NavigationView>
  </com.google.android.material.appbar.AppBarLayout>
  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="30dp"
      android:background="@drawable/user_ragistation_border"
      android:textColorHint="#6C6B6B"
      app:boxBackgroundColor="@color/white"
      app:boxBackgroundMode="none"
      app:boxCornerRadiusBottomEnd="10dp"
      app:boxCornerRadiusBottomStart="10dp"
      app:boxCornerRadiusTopEnd="10dp"
      app:boxCornerRadiusTopStart="10dp"
      app:hintTextColor="#6C6B6B">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/forgate_enrollment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:hint="Enrollment id"
        android:inputType="text" />
  </com.google.android.material.textfield.TextInputLayout>
  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/forgate_otp_vissival"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/user_ragistation_border"
      android:textColorHint="#6C6B6B"
      app:boxBackgroundColor="@color/white"
      app:boxBackgroundMode="none"
      app:boxCornerRadiusBottomEnd="10dp"
      app:boxCornerRadiusBottomStart="10dp"
      app:boxCornerRadiusTopEnd="10dp"
      app:boxCornerRadiusTopStart="10dp"
      app:hintTextColor="#6C6B6B">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/forgate_otp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:hint="Enter Otp"
        android:inputType="text" />
  </com.google.android.material.textfield.TextInputLayout>
  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/forgate_password_vissival"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/user_ragistation_border"
      android:textColorHint="#6C6B6B"
      app:boxBackgroundColor="@color/white"
      app:boxBackgroundMode="none"
      app:boxCornerRadiusBottomEnd="10dp"
      app:boxCornerRadiusBottomStart="10dp"
      app:boxCornerRadiusTopEnd="10dp"
      app:boxCornerRadiusTopStart="10dp"
      app:hintTextColor="#6C6B6B">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/forgate_password_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:hint="Password"
        android:inputType="text" />
  </com.google.android.material.textfield.TextInputLayout>
  <TextView
      android:id="@+id/forgate_password_botton"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_below="@+id/user_confirm_password"
      android:layout_gravity="right"
      android:layout_marginHorizontal="30dp"
      android:layout_marginTop="30dp"
      android:background="@drawable/login_button"
      android:gravity="center"
      android:text="Update Password"
      android:textColor="@color/white"
      android:textSize="15sp" />
  <TextView
      android:id="@+id/forgate_otp_botton"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_below="@+id/user_confirm_password"
      android:layout_gravity="right"
      android:layout_marginHorizontal="30dp"
      android:layout_marginTop="30dp"
      android:background="@drawable/login_button"
      android:gravity="center"
      android:text="OTP"
      android:textColor="@color/white"
      android:textSize="15sp" />
  <TextView
      android:id="@+id/forgate_otp_verify_button"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_below="@+id/user_confirm_password"
      android:layout_gravity="right"
      android:layout_marginHorizontal="30dp"
      android:layout_marginTop="30dp"
      android:background="@drawable/login_button"
      android:gravity="center"
      android:text="Verify"
      android:textColor="@color/white"
      android:textSize="15sp" />
  </LinearLayout>